SELECT 
    T.TABNAME AS TABLE_NAME,
    C.COLNAME AS COLUMN_NAME,
    C.TYPENAME AS DATA_TYPE,
    C.LENGTH AS LENGTH,
    C.SCALE AS SCALE,
    C.NULLS AS IS_NULLABLE,
    C.REMARKS AS COLUMN_DESCRIPTION,
    T.REMARKS AS TABLE_DESCRIPTION
FROM 
    SYSCAT.TABLES T
JOIN 
    SYSCAT.COLUMNS C 
ON 
    T.TABSCHEMA = C.TABSCHEMA 
    AND T.TABNAME = C.TABNAME
WHERE 
    T.TABSCHEMA = 'YOUR_SCHEMA_NAME'
ORDER BY 
    T.TABNAME, C.COLNO;
